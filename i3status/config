cpu_temperature 0 {
    format = "%degreesÂ°C"
    max_threshold = 55
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
    # temp1: package
    # temp2: core0
    # temp3: core1
    separator = false
}

cpu_usage {
    # format = "CPU %usage"
    format = "âš™ %usage"
    # gear âš™
    separator = false
    degraded_threshold = 70
    max_threshold = 90
}

load {
    format = "load: [ %1min, %5min, %15min ]"
}


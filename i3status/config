general {
    colors = true
    color_good     = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad      = "#FF0000"
    color_separator = "#3EC2FF" # for non-i3bar
    # output_format = "dzen2" # change i3/config status_command
    output_format = i3bar
    interval = 5
}

